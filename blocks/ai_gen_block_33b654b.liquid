{% doc %}
  @prompt
    create icon with text for email address, phone number, email, put display flex
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-info-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-contact-info-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: {{ block.settings.item_spacing }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-contact-info-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background }};
    border-radius: {{ block.settings.border_radius }}px;
    transition: transform 0.2s ease;
    flex: 1 1 auto;
    min-width: 250px;
  }

  .ai-contact-info-item-{{ ai_gen_id }}:hover {
    transform: translateY(-3px);
  }

  .ai-contact-info-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    color: {{ block.settings.icon_color }};
  }

  .ai-contact-info-icon-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.5);
    height: calc({{ block.settings.icon_size }}px * 0.5);
  }

  .ai-contact-info-text-{{ ai_gen_id }} {
    flex-grow: 1;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  .ai-contact-info-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-contact-info-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-info-container-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-contact-info-item-{{ ai_gen_id }} {
      min-width: 100%;
    }

    .ai-contact-info-icon-{{ ai_gen_id }} {
      width: calc({{ block.settings.icon_size }}px * 0.8);
      height: calc({{ block.settings.icon_size }}px * 0.8);
    }

    .ai-contact-info-icon-{{ ai_gen_id }} svg {
      width: calc({{ block.settings.icon_size }}px * 0.4);
      height: calc({{ block.settings.icon_size }}px * 0.4);
    }

    .ai-contact-info-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-contact-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-info-container-{{ ai_gen_id }}">
    {% if block.settings.show_email %}
      <div class="ai-contact-info-item-{{ ai_gen_id }}">
        <div class="ai-contact-info-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
            <path d="m2 7 10 7 10-7"></path>
          </svg>
        </div>
        <div class="ai-contact-info-text-{{ ai_gen_id }}">
          {% if block.settings.email_address != blank %}
            <a href="mailto:{{ block.settings.email_address }}" class="ai-contact-info-link-{{ ai_gen_id }}">
              {{ block.settings.email_address }}
            </a>
          {% else %}
            <span style="color: #999; font-style: italic;">Add your email address</span>
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_phone %}
      <div class="ai-contact-info-item-{{ ai_gen_id }}">
        <div class="ai-contact-info-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
        </div>
        <div class="ai-contact-info-text-{{ ai_gen_id }}">
          {% if block.settings.phone_number != blank %}
            <a href="tel:{{ block.settings.phone_number | replace: ' ', '' | replace: '-', '' }}" class="ai-contact-info-link-{{ ai_gen_id }}">
              {{ block.settings.phone_number }}
            </a>
          {% else %}
            <span style="color: #999; font-style: italic;">Add your phone number</span>
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_address %}
      <div class="ai-contact-info-item-{{ ai_gen_id }}">
        <div class="ai-contact-info-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <div class="ai-contact-info-text-{{ ai_gen_id }}">
          {% if block.settings.address != blank %}
            {{ block.settings.address }}
          {% else %}
            <span style="color: #999; font-style: italic;">Add your address</span>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

