{% doc %}
  @prompt
    create one icon with text it has icon like free shipping, quality support, return and refund. it has heading subheading. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-features-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-icon-features__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-icon-features__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-icon-features__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 600;
  }

  .ai-icon-features__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-icon-features__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-icon-features__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.layout }};
    align-items: {{ block.settings.item_alignment }};
    text-align: {% if block.settings.layout == 'column' %}{{ block.settings.text_alignment }}{% else %}left{% endif %};
    gap: {{ block.settings.icon_text_gap }}px;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background }};
    border-radius: {{ block.settings.item_border_radius }}px;
  }

  .ai-icon-features__icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background }};
    border-radius: {{ block.settings.icon_border_radius }}px;
  }

  .ai-icon-features__icon-wrapper-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
    stroke: {{ block.settings.icon_color }};
    fill: none;
  }

  .ai-icon-features__content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-icon-features__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_title_size }}px;
    color: {{ block.settings.item_title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 600;
  }

  .ai-icon-features__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_text_size }}px;
    color: {{ block.settings.item_text_color }};
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-features__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-icon-features__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-icon-features__subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }
  }
{% endstyle %}

<icon-features-{{ ai_gen_id }} class="ai-icon-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-icon-features__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-icon-features__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-icon-features__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-icon-features__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
