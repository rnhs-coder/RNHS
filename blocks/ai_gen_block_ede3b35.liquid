          <p class="ai-icon-features__text-{{ ai_gen_id }}">{{ block.settings.feature_1_text }}</p>
        </div>
      </div>

      <div class="ai-icon-features__item-{{ ai_gen_id }}">
        <div class="ai-icon-features__icon-wrapper-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
        </div>
        <div class="ai-icon-features__content-{{ ai_gen_id }}">
          <h3 class="ai-icon-features__title-{{ ai_gen_id }}">{{ block.settings.feature_2_title }}</h3>
          <p class="ai-icon-features__text-{{ ai_gen_id }}">{{ block.settings.feature_2_text }}</p>
        </div>
